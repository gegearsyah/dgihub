# ============================================================================
# DGIHub Platform - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dgihub
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# ============================================================================
# JWT Authentication
# ============================================================================
JWT_SECRET=change-this-to-a-strong-random-secret-key-min-32-chars
JWT_REFRESH_SECRET=change-this-to-a-different-strong-random-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# AWS S3 Configuration
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-5
S3_BUCKET=dgihub-prod

# ============================================================================
# Dukcapil API Integration
# ============================================================================
DUKCAPIL_API_URL=https://api.dukcapil.go.id
DUKCAPIL_API_KEY=your-dukcapil-api-key

# ============================================================================
# Siplatih API Integration
# ============================================================================
SIPLATIH_API_URL=https://siplatih.kemnaker.go.id/api/v1
SIPLATIH_CLIENT_ID=your-siplatih-client-id
SIPLATIH_CLIENT_SECRET=your-siplatih-client-secret

# ============================================================================
# HSM (Hardware Security Module) Configuration
# ============================================================================
HSM_PRIVATE_KEY=your-hsm-private-key-or-leave-empty-for-test-key

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
